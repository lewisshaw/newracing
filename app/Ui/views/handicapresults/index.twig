{% extends "layout/main.twig" %}
{% block breadcrumb %}
  {{ parent() }}
  <li><a href="/admin/series/">series</a></li>
  <li><a href="/admin/series/{{ race.seriesId }}/races">races</a></li>
  <li class="active">results</li>
{% endblock %}
{% block content %}
  <h1>View Results</h1>
  <p class="important">
    Manage results.
  </p>
  {% include "partials/errors.twig" %}
  {% include "partials/message.twig" %}
  <div>

  <ul class="nav nav-tabs" id="tabs-links" role="tablist">
    <li role="presentation" class="active"><a href="#add-result" aria-controls="add-result" role="tab" data-toggle="tab">Add Standard Result</a></li>
    <li role="presentation"><a id="add-non-finisher-link" href="#add-non-finisher" aria-controls="add-non-finisher" role="tab" data-toggle="tab">Add Non Finisher</a></li>
    <li role="presentation"><a id="upload-csv-tab" href="#upload-csv" aria-controls="upload-csv" role="tab" data-toggle="tab">Upload CSV</a></li>
  </ul>

  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="add-result">
      {% include "handicapresults/insert-update.twig" %}
    </div>
    <div role="tabpanel" class="tab-pane" id="add-non-finisher">
      {% include "results/unfinished/insert-update.twig"  with {'redirectUrl': 'admin/races/' ~ race.raceId ~ '/results/' ~ race.raceTypeHandle|lower } %}
    </div>
    <div role="tabpanel" class="tab-pane" id="upload-csv">
      <p>Please select a CSV</p>
      <form method="post" action="import/csv" class="form-inline" enctype="multipart/form-data">
          <div class="form-group" >
            <span style="font-weight: bold" id="file-name-display">No file selected</span>
            <label class="btn btn-primary" for="file-select">Browse
              <input type="file" name="results-file" class="form-control" id="file-select" style="display:none"/>
            </label>
          </div>
        <button type="submit" class="btn btn-primary">Upload</button>
      </form>
    </div>
  </div>

</div>

  <h2>Results - <button type="button" id="preview-modal-button" class="btn btn-link btn-lg" data-toggle="modal" data-target="#preview-modal">
  Preview Calculated Results
</button>
</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Sail Number</th><th>Helm</th><th>Crew</th><th>Class</th><th>Laps</th><th>Time</th><th></th>
      </tr>
    </thead>
    <tbody>
      {% for result in results %}
        <tr>
          <td>{{ result.sailNumber }}</td>
          <td>{{ result.helm }}</td>
          <td>
            {% if result.crew|length > 0 %}
              {{ result.crew }}
            {%else %}
              No Crew
            {% endif %}
          </td>
          <td>{{ result.boatClassName }}</td>
          <td>{{ result.laps is defined ? result.laps : result.unfinishedTypeHandle }}</td>
          <td>{{ result.time is defined ? result.time|secsToMins : result.unfinishedTypeHandle }}</td>
          <td>
            <form method="post" action="
            {% if result.time is defined %}
              /admin/races/{{race.raceId}}/results/{{race.raceTypeHandle|lower}}/{{result.resultId}}/delete
            {% else %}
              /admin/races/{{race.raceId}}/unfinishedresults/{{result.resultId}}/delete
            {% endif %}
            ">
            <input type="hidden" name="redirect_url" value="admin/races/{{ race.raceId }}/results/{{ race.raceTypeHandle|lower }}" />
            <button type="submit" class="btn btn-primary">Delete</button>
          </form>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
  <div class="modal fade" id="preview-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Preview Calculated Results</h4>
      </div>
      <div id ="preview-modal-body" class="modal-body">
        {%include 'partials/results-tables/handicap.twig' with {'results' : sortedResults} %}
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
{% endblock %}
{% block scripts %}
<script type="text/javascript">
  $('#tabs-links a').click(function (e) {
    e.preventDefault()
    $(this).tab('show')
    $('.hidden-search-select').select2();
  });
  $('#file-select').change( function (){
    $('#file-name-display').html($('#file-select')[0].files[0].name);
  });
</script>
{% endblock %}
