{% extends "user/layout.twig" %}
{% block breadcrumb %}
  {{ parent() }}
  <li>result</li>
{% endblock %}
{% block content %}

<h3>{% include 'partials/race-info.twig' %}</h3>

<table class="table table-striped table-hover">
  <thead>
    <tr>
    <th>Position</th><th>Sail Number</th><th>Helm</th><th>Crew</th><th>Boat Class Name</th>
    </tr>
  </thead>
  <tbody>
{% for result in results %}
<tr>
    <td>{{ result.position }} {{ result.unfinishedTypeHandle is defined ? '(' ~ result.unfinishedTypeHandle ~ ')' : '' }} </td> <td>{{ result.sailNumber }}</td> <td>{{ result.helm }}</td>
    <td>
      {% if result.crew|length > 0 %}
        {{ result.crew }}
      {%else %}
        No Crew
      {% endif %}
    </td>
    <td>{{ result.boatClassName }}</td>
</tr>
{% endfor %}
</tbody>
</table>
{% endblock %}
